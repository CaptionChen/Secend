	<link href="https://cdn.bootcss.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
     <!-- 配置文件 -->
    <script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
</head>
<body>
<div class="top">
  <h3> 欢迎进入admin文章管理 </h3>
</div>
<div class="wrap">
  <% include ./left.ejs %>
  <div class="right">
      <h3> 添加文章 </h3>

      <form action="/admin/update_1" enctype="multipart/form-data"  method="post">
          <p>
              <span>
                文章标题
              </span>
              <input type="text" name="title" value="<%=ggg.title%>">
          </p>
          <p>
              <span>
                作者
              </span>
              <input type="text" name="author" value="<%=ggg.author%>">
          </p>
          <p>
              <span>
                分类
              </span>
              <select name="cid" id=""  value="<%=ggg.cid%>">
                     <% for(var i=0;i<cate.length;i++){  %>

                      <option value="<%= cate[i].id %>"> <%= cate[i].catename %> </option>


                      <% } %>
              </select>
          </p>
           <p>
              <span>
                摘要
              </span>
              <textarea name="zhaiyao" id="" cols="30" rows="10"  value="<%=ggg.zhaiyao%>"></textarea>
          </p>
             <p>
              <span>
                时间
              </span>
              <input type="text" name="shijian"  value="<%=ggg.shijian%>">
          </p>
          <p>
              <span>
                图片
              </span>
              <input type="file" name="pic" value="<%=ggg.pic%>"/>
          </p>
          <p>
              <span>
                内容
              </span>
                      <!-- 加载编辑器的容器 -->
              <script id="container" style="width: 800px;height: 400px" name="content" type="text/plain"  value="<%=ggg.content%>">
                这里写你的初始化内容
              </script>
          </p>
          <p>
             <input type="hidden" name="id" value="<%=ggg.id%>">
             <input type="submit">
          </p>

      </form>

  </div>


<script>
